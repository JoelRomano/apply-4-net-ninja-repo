@model IEnumerable<ninja.model.Entity.Invoice>

@{
    ViewBag.Title = "Invoices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create", null , new { @class = "btn btn-primary btn-lg" })
</p>

<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>Controls</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new { @class = "btn btn-secondary btn-lg" })
            @Html.ActionLink("Details", "Detail", new { id=item.Id }, new { @class = "btn btn-secondary btn-lg" })
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-danger btn-lg" })
        </td>
    </tr>
}

</table>
